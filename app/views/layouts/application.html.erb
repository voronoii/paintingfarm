<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
   <title>PaintingFarm</title>
	<!--  Stylesheet -->
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="/css/animate.css">
	<link rel="stylesheet" type="text/css" href="/rs-plugin/css/settings.css" media="screen" />
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/color.css">
	<link rel="stylesheet" type="text/css" href="/css/simpletextrotator.css">
	<link rel="stylesheet" type="text/css" href="/css/javascript.css">
	<link rel="stylesheet" type="text/css" href="/css/responsive.css">
	<link rel="stylesheet" type="text/css" href="/css/bootstrap-social.css">
	<link rel="stylesheet" type="text/css" href="/css/font-awesome.css">
	<!-- Mobile Devices -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- GOOGLE FONTS -->
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,700italic,400,300,700' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>
	  
	  
	<!-- dropdown -->  
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
	
	<script type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

	<!--draggable image-->
	<script type="text/javascript" src="https://cdn.rawgit.com/asvd/dragscroll/master/dragscroll.js"></script>

	<!-- Rails default -->
   <%= stylesheet_link_tag    'application', media: 'all'%>
   <%= javascript_include_tag 'application' %>
   <%#= stylesheet_link_tag 'scaffold', 'pagination' %>
   <%= tinymce_assets %>
   <%= csrf_meta_tags %>	
</head>
<body class="home home-t-h body"><!--home home-t-h body-->
	
	<div id="preloader">
		<div id="status" class="animated infinite pulse"></div>
	</div>	
	
	<!--********************** HEADER SECTION ************************* -->
	<header class="transparent header-center header-fw">
		<div class="container-fluid">
			<div class="header-container">
				<!-- LOGO -->
				<div class="col-md-3 col-sm-6">
					<h1 class="logo"><a href="/">PaintingFarm</a></h1>
				</div>
				<!-- PRIMARY NAVIGATION -->
				<div class="col-md-6 no-phone-view">
					<nav class="primary-navigation">
						<ul id="nav-menu">
							<li class="selected"><a href="/">홈</a></li>
							<li><a href="/markets">마켓</a></li>
							<li><a href="/artists">아티스트</a></li>
							<!--<li><a href="/galleries">갤러리</a></li>-->
							<li><a href="/boards">이벤트</a></li>		
							<!--<li><a href="/boards">자유게시판</a></li>-->
						</ul>
					</nav>
				</div><!--  -->
				<!-- TOOL NAV -->
				<div class="col-md-3 no-phone-view">
					<nav class="tool-navigation">
						<button class="search-button"><i class="icon-search2"></i></button>
					    <% if user_signed_in? %>
						  <!--<div class="dropdown">-->
						    <button class="m-btn m-btn-white profile-button dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
						     	<%= current_user.nickname if current_user.nickname %>
						    <span class="caret"></span></button>
						    
						    <ul class="dropdown-menu" style="righ=0;">
						      <!--<li><a class="dropdown-item" href="/mypage/index">마이페이지</a></li>-->
						      <!--<li><a class="dropdown-item" href="/mypage/myartwork">내 작품</a></li>-->
						      <li><a class="dropdown-item" href="/users/sign_out" data-method="delete">로그아웃</a></li>
						    </ul>						   
						  <!--</div>-->
					    <% else %>
					     <a href="/users/sign_in"><button class="m-btn m-btn-white login-button">로그인</button></a>
						<% end %>
						
						<% current_user.email == "paintingfarm@gmail.com"%>
						<a href="/markets/new"><button class="m-btn new-button">작품등록</button></a>
						<% end %>
					</nav>
				</div>
				<span class="responsive-trigger"><i class="icon-list2"></i></span>
			</div>
		</div>
		<!-- RESPONSIVE NAVIGATION -->
		<nav class="responsive-navigation">
			<ul>
				<li class="selected">
					<a href="/">홈</a>
				</li>
				<li><a href="/markets">마켓</a></li>
				<li>
					<a href="/artists">아티스트</a>
				</li>
				<!--<li><a href="/galleries">갤러리</a></li>-->
				<li>
					<a href="/boards">이벤트</a>
					<!--<span class="submenu-trigger"><i class="icon-arrow-down5"></i></span>-->
				</li>
				<!--<li><a href="/boards">자유게시판</a></li>-->
				<li><a href="/users/sign_in">로그인</a></li>
			</ul>
		</nav>
	</header>
	<!--//********************** HEADER SECTION ************************* -->
  
  <%= yield %>
  
	<!-- *********************
		FOOTER
	<!--********************** -->
	<footer class="footer col-md-12">
		<p>&copy; PaintingFarm 2016 All Rights Reserved</p>
	</footer>

	<!-- *********************
		SEARCH
	********************** -->
	<div class="search-modal">
		<div class="container-fluid">
			<div class="search-modal-wrap">
				<%= form_tag('/markets', :method => "get", :style => "text-align: right", :class => "form-inline") do %>
            <!--<input type="text" placeholder="SEARCH" params='search'>-->
            <%= text_field_tag :search, params[:search], placeholder: '작품명' %><!-- 현재는 작품명만 가능-->
            <% end %>
				
			</div>
			<div class="close-modal">
				<i class="icon-cross" id="searchClose"></i>
			</div>
		</div>
	</div>
	
	<div class="back-to-top" id="backTop"><i class="icon-arrow-up4"></i></div>
	
	<!-- Javascript -->
	<script type="text/javascript" src="/js/jquery-1.11.2.js"></script>	
	<script type="text/javascript" src="/js/jquery.flexslider.js"></script>
	<script type="text/javascript" src="/js/jquery.parallax-1.1.3.js"></script>
	<script type="text/javascript" src="/js/jquery.scrollto-1.4.3.1.js"></script>
	<script type="text/javascript" src="/js/jquery.localscroll-1.2.7.js"></script>
	<script type="text/javascript" src="/js/jquery.isotope.js"></script>
	<script type="text/javascript" src="/js/jquery.masonry.min.js"></script>
	<script type="text/javascript" src="/js/owl.carousel.js"></script>
	<script type="text/javascript" src="/js/jquery.countTo.js"></script>
	<script type="text/javascript" src="/js/wow.js"></script>
	<script type="text/javascript" src="/js/tabby.min.js"></script>

	<script type="text/javascript" src="/js/jquery.magnific-popup.js"></script>
	<script type="text/javascript" src="/js/jquery.simple-text-rotator.js"></script>
	<script type="text/javascript" src="/js/jquery.smoothscroll.js"></script>
	<script type="text/javascript" src="/js/validator.min.js"></script>
	<script type="text/javascript" src="/rs-plugin/js/jquery.themepunch.tools.min.js"></script>
	<script type="text/javascript" src="/rs-plugin/js/jquery.themepunch.revolution.min.js"></script>
	<!-- functions javascript -->
	<script type="text/javascript" src="/js/functions.js"></script>	
</body>
</html>
