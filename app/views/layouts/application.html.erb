<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
   <title>PaintingFarm</title>
	<!--  Stylesheet -->
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="/css/animate.css">
	<link rel="stylesheet" type="text/css" href="/rs-plugin/css/settings.css" media="screen" />
	<link rel="stylesheet" type="text/css" href="/css/style.css">
	<link rel="stylesheet" type="text/css" href="/css/color.css">
	<link rel="stylesheet" type="text/css" href="/css/simpletextrotator.css">
	<link rel="stylesheet" type="text/css" href="/css/javascript.css">
	<link rel="stylesheet" type="text/css" href="/css/responsive.css">
	
	<!-- Mobile Devices -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- GOOGLE FONTS -->
	<link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,700italic,400,300,700' rel='stylesheet' type='text/css'>
	<link href='https://fonts.googleapis.com/css?family=Oswald:400,300,700' rel='stylesheet' type='text/css'>

	<!-- Rails default -->
   <%= stylesheet_link_tag    'application', media: 'all'%>
   <%= javascript_include_tag 'application' %>
   <%= csrf_meta_tags %>	
</head>
<body class="home home-t-h body"><!--home home-t-h body-->
	<div id="preloader">
		<div id="status" class="animated infinite pulse"></div>
	</div>	
	
	<!--********************** HEADER SECTION ************************* -->
	<header class="transparent header-center header-fw">
		<div class="container-fluid">
			<div class="header-container">
				<!-- LOGO -->
				<div class="col-md-3 col-sm-6">
					<h1 class="logo"><a href="/">PaintingFarm</a></h1>
				</div>
				<!-- PRIMARY NAVIGATION -->
				<div class="col-md-6 no-phone-view">
					<nav class="primary-navigation">
						<ul id="nav-menu">
							<li class="selected"><a href="/">홈</a></li>
							<li><a href="/markets">마켓</a></li>
							<li><a href="/artists">아티스트</a></li>
							<li><a href="/galleries">갤러리</a></li>
							<li><a href="/events">이벤트</a></li>
						</ul>
					</nav>
				</div><!--  -->
				<!-- TOOL NAV -->
				<div class="col-md-3 no-phone-view">
					<nav class="tool-navigation">
						<button class="search-button"><i class="icon-search2"></i></button>
						<button class="cart-button"><i class="icon-cart"></i> <span class="cart-item-count">8</span></button>
					    <% if user_signed_in? %>
					     <a href="/users/sign_out" data-method="delete"><button class="m-btn m-btn-radius m-btn-white login-button">로그아웃</button></a>
					    <% else %>
					     <a href="/users/sign_in"><button class="m-btn m-btn-radius m-btn-white login-button">로그인</button></a>
						<% end %>
						<a href="/markets/new"><button class="m-btn m-btn-radius m-btn-default m-btn-small nav-button">작품등록</button></a>
					</nav>
				</div>
				<span class="responsive-trigger"><i class="icon-list2"></i></span>
			</div>
		</div>
		<!-- RESPONSIVE NAVIGATION -->
		<nav class="responsive-navigation">
			<ul>
				<li class="selected">
					<a href="/">홈</a>
				</li>
				<li><a href="/markets">마켓</a></li>
				<li>
					<a href="/artists">아티스트</a>
				</li>
				<li><a href="/galleries">갤러리</a></li>
				<li>
					<a href="/events">이벤트</a>
					<span class="submenu-trigger"><i class="icon-arrow-down5"></i></span>
				</li>
				<li><a href="/users/sign_in">로그인</a></li>
			</ul>
			<div class="tool-nav-resp">
				<button class="tool-nav-item search-btn-resp"><i class="icon-search2"></i></button>
				<a href="shop-cart.html" class="tool-nav-item"><i class="icon-cart"></i> <span class="cart-resp-count">8</span></a>
			</div>
		</nav>
	</header>
	<!--//********************** HEADER SECTION ************************* -->
  
  <%= yield %>
  
	<!-- *********************
		FOOTER
	********************** -->	
	<footer class="footer col-md-12">
		<p>&copy; PaintingFarm 2016 All Rights Reserved</p>
	</footer>

	<!-- *********************
		SEARCH
	********************** -->
	<div class="search-modal">
		<div class="container-fluid">
			<div class="search-modal-wrap">
				<input type="text" placeholder="SEARCH">
			</div>
			<div class="close-modal">
				<i class="icon-cross" id="searchClose"></i>
			</div>
		</div>
	</div>
	<!-- *********************
		CART
	********************** -->
	<div class="cart-modal">
		<div class="container-fluid">
			<div class="cart-modal-wrap col-md-4 col-md-offset-4">
				<div class="cart">
					<table class="table">
						<thead>
