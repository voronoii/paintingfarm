						<h2 class="portfolio-item-title">
								<%= artist.user.nickname %>							
						</h2>
						<!--<div class="portfolio-item-cats">-->
						<!--	<span>여기다가 무엇을</span>-->
						<!--	<span>넣어야할까</span>-->
						<!--</div>-->
