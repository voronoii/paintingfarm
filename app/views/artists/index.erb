			</nav>
		<!-- 작가 항목-->
		<div class="portfolio-container portfolio-gutters-3">
			<!-- 이부분이 반복-->
			<!-- portfolio item -->
			<% @artists.each do |artist| %>
			<!--여기 하단 클래스 옆에다가 data filter 설정해줘야함 8월 24일 우리추가-->
