	<section class="portfolio section-area no-pd-b" id="portfolio">
		<div class="container">
			<!-- 작가목록 카테고리 필터 -->
			<nav class="portfolio-navigation">
				<ul class="portfolio-filter clearfix" data-option-key="filter">
					<li><a href="" data-filter="*" class="current-filter">모든 아티스트</a></li>
