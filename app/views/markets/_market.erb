<article class="blog-article-masonry">	
	<div class="blog-article-img">
	    <%= image_tag(market.image) %>
	</div>
								
	<a href="/markets/show/<%=market.id%>"><div class="product-cap"></div></a>

	<div class="blog-article-content">
		<h4 class="blog-article-title"><b><%= market.title %></b></h4>
	    <div class="blog-article-footer">
			<span class="blog-article-author"><a href=""><%= market.artist.user.nickname %></a></span>
			<span class="blog-article-author right"><%= "#{market.genre} #{market.width}x#{market.height}cm #{market.year}" %></span>
		</div>
	</div>
</article>