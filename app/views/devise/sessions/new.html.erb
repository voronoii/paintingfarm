        <!--  <span class="fa fa-google"></span>-->
        <!--  구글로 로그인-->
        <!--</a>          -->
				</div><!-- login -->
			</div>
			<div class="close-modal">
				<i class="icon-cross" id="loginClose"></i>
			</div>
		</div>
	</div>


